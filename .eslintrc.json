{
  "env": {
    "browser": true,
    "es2021": true
  },
  "globals": {
    "Game": "writable",
    "l": "readonly",
    "b64_to_utf8": "readonly",
    "utf8_to_b64": "readonly",
    "BeautifyAll": "readonly",
    "PlaySound": "readonly"
  },
  "extends": ["airbnb-base", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "plugins": ["@typescript-eslint"],
  "overrides": [
    {
      "files": ["src/**/*.ts"],
      "extends": ["plugin:@typescript-eslint/recommended"],
      "parser": "@typescript-eslint/parser",
      "rules": {
        "import/extensions": [
          "error",
          "ignorePackages",
          {
            "ts": "never"
          }
        ],
        "no-useless-constructor": "off"
      }
    }
  ],
  "ignorePatterns": ["*CookieMonster*.js", "dist/*", "node_modules/*"],
  "rules": {
    // To allow unnamed arrow functions
    "func-names": "off",
    // We need to this throughout Cookie Monster
    "import/no-mutable-exports": "off",
    "no-plusplus": [
      "error",
      {
        "allowForLoopAfterthoughts": true
      }
    ],
    // Importing arrays and then destructuring them seems to fail
    "prefer-destructuring": [
      "error",
      {
        "object": true,
        "array": false
      }
    ],
    "max-len": [
      1,
      {
        "code": 100,
        "ignoreComments": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "typescript": {}
    }
  }
}
